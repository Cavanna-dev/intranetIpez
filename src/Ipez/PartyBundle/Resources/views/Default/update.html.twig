{% extends "::base.html.twig" %}
{% block title %}Modification Evènement - Module Evènement{% endblock %}

{% block body %}
<form action="{{ path('ipez_party_update', {'id': party.id}) }}" method="post" class="form-horizontal jumbotron">
    <fieldset>
        <legend><h2>Modification Evènement</h2></legend>
        <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">Nom</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name ="name" id="inputReference" placeholder="Nom" value="{{party.name}}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress" class="col-lg-2 control-label">Adresse</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name="address" id="inputTradeName" placeholder="Adresse" value="{{party.address}}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputTown" class="col-lg-2 control-label">Ville</label>
            <div class="col-lg-2">
                <input type="text" class="form-control" name="town" id="inputTown" placeholder="Ville" value="{{party.town}}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputCp" class="col-lg-2 control-label">Code Postal</label>
            <div class="col-lg-2">
                <input type="text" class="form-control" name="cp" id="inputCp" placeholder="Code Postal" value="{{party.cp}}">
            </div>
        </div>        
        <div class="form-group">
            <label for="inputDate" class="col-lg-2 control-label">Date</label>
            <div class="col-lg-2">
                <input type="text" class="form-control" name="date" id="inputDate" placeholder="Date"
                value="{{party.date | date('d/m/Y')}}">
            </div>
        </div>
         <div class="form-group">
            <label for="inputNbParticipant" class="col-lg-2 control-label">Nombre d'invitation</label>
            <div class="col-lg-2">
                <input type="text" class="form-control" name="nbParticipant" id="inputNbParticipant" value="{{party.nbParticipant}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button class="btn btn-default">Annuler</button>
                <button type="submit" class="btn btn-primary">Modifier</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
{% extends "::base.html.twig" %}
{% block title %}Creation Produit - Module Produit{% endblock %}

{% block body %}
<form action="{{ path('ipez_product_create') }}" method="post" class="form-horizontal jumbotron">
    <fieldset>
        <legend><h2>Ajout Nouveau Produit</h2></legend>
        <div class="form-group">
            <label for="inputReference" class="col-lg-2 control-label">Référence Produit</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name ="reference" id="Reference" placeholder="Reference">
            </div>
        </div>
        <div class="form-group">
            <label for="inputTradeName" class="col-lg-2 control-label">Nom Commercial Produit</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name="tradeName" id="inputTradeName" placeholder="Nom Commercial">
            </div>
        </div>
        <div class="form-group">
            <label for="inputCI" class="col-lg-2 control-label">Stock Produit</label>
            <div class="col-lg-2">
                <input type="text" class="form-control" name="cI" id="inputCI" placeholder="Stock">
            </div>
        </div>
        <div class="form-group">
            <label for="inputType" class="col-lg-2 control-label">Catégorie Produit</label>
            <div class="col-lg-2">
                <select id="inputType" class="form-control" name="type">
                    {% for object in types %}
                        <option value="{{ object.id }}">{{ object.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrlImg" class="col-lg-2 control-label">Image</label>
            <div class="col-lg-8">
                <input type="text" class="form-control" name="urlImg" id="inputUrlImg" placeholder="Image" >
            </div>
        </div>
        <div class="form-group">
            <label for="inputSalesParty" class="col-lg-2 control-label">Top Ventes</label>
            <div class="col-lg-2">
                <select id="inputSalesParty" class="form-control" name="salesParty">
                     <option value="2">Top</option>
                     <option value="1">Oui</option>
                     <option SELECTED value="0">Non</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button class="btn btn-default">Annuler</button>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}